    "#schemes": {
        "#base": {
            "#resources": {
                "click.wav": {
                    "name": "click"
                },

                "cancel.wav": {
                    "name": "cancel"
                },

                "scroll.wav": {
                    "name": "scroll"
                },

                "slide_up.wav": {
                    "name": "slide_up"
                },

                "slide_down.wav": {
                    "name": "slide_down"
                },

                "buttons.png": {
                    "atlas": {
                        "_A": [0, 0, 180, 180],
                        "_B": [180, 0, 180, 180],
                        "_X": [360, 0, 180, 180],
                        "_Y": [540, 0, 180, 180],
                        "_START": [0, 180, 360, 180],
                        "_SELECT": [360, 180, 360, 180],
                        "_L": [0, 360, 270, 180],
                        "_R": [270, 360, 270, 180],
                        "_UNCHECKED": [720, 0, 180, 180],
                        "_CHECKED": [900, 0, 180, 180],
                        "_MORE": [720, 180, 180, 180],
                        "_LEFT": [900, 180, 90, 180],
                        "_RIGHT": [990, 180, 90, 180],
                        "_UP": [900, 360, 180, 90],
                        "_DOWN": [900, 450, 180, 90]
                    }
                },

                "no-image.jpg": {
                    "name": "NO_IMAGE"
                }
            }
        },

        "Hi Viz": {
            "#pallet": {
                "background": [0, 0, 0],
                "background_fade": [0, 0, 0, 0],
                "list_text": [84, 84, 84],
                "list_selected": [255, 255, 255],
                "list_unselectable": [255, 255, 255],
                "button": [255, 255, 255],
                "general_font": [255, 255, 255],
                "download_font": [255, 255, 255],
                "panels": [0, 0, 0],
                "selection-fill": [84, 84, 84],
                "secondary-selection-fill": [0, 0, 0]
            },

            "#resources": {
                "buttons.png": {
                    "image-mod": [255, 255, 255]
                }
            }
        }
    },

